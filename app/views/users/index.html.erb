<h1 class='center blue orange-text'>PostWorld Users:</h1>
<% if @users.any? %>
  <% @users.each do |user| %>
    <ul>
      <h3 class='brown darken-1 pink-text text-lighten-2'><%= user.name %></h3>
      <%= image_tag user.avatar.url(:thumb) %>

      <%= link_to 'Show User Posts', user_path(user) %> |
      <%= link_to 'Edit User', edit_user_path(user) %> |
      <%= link_to 'Destroy user', user_path(user), method: :delete %>
    </ul>
  <% end %>
<% else %>
<h3> No users found </h3>
<% end %>
<p><%= link_to 'New User', new_user_path %></p>
